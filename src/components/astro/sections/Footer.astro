---
/** biome-ignore-all lint/correctness/noUnusedImports: variables used in Astro components */

import { siteConfig } from "@config/site";
import ThemeToggle from "@react/ui/ThemeToggle";
import { FiFileText, FiShield } from "react-icons/fi";
---

<footer class="py-6 bg-neutral-50 dark:bg-black">
	<div class="container mx-auto px-6">
		<div class="mb-6 h-px w-full bg-gray-200 dark:bg-gray-800"></div>
		<div class="flex flex-col gap-6 md:hidden">
			<div class="flex items-center justify-between">
				<div class="flex items-center gap-3">
					<img src={siteConfig.logo} alt="Logo" class="w-8 h-8 rounded-lg shadow-sm" />
					<span class="text-lg font-semibold text-neutral-800 dark:text-white">
						{siteConfig.name}
					</span>
				</div>
				<ThemeToggle client:load />
			</div>

			<p class="text-sm text-neutral-600 dark:text-neutral-400 leading-relaxed text-left">
				{siteConfig.description}
			</p>

			<div class="flex items-center justify-between">
				<div class="flex items-center gap-3">
					{siteConfig.socialLinks.map((link) => (
						<a
							href={link.url}
							target="_blank"
							rel="noopener noreferrer"
							class="flex items-center justify-center w-10 h-10 rounded-lg bg-neutral-100 dark:bg-white/5 hover:bg-neutral-200 dark:hover:bg-white/10 border border-neutral-200/50 dark:border-white/5 hover:scale-105"
							aria-label={link.label}
							title={link.label}
						>
							<link.icon className="w-4 h-4 text-neutral-600 dark:text-neutral-300" />
						</a>
					))}
				</div>

				<div class="flex items-center gap-2 text-sm">
					<a
						href="/privacy"
						class="flex items-center gap-2 text-neutral-500 dark:text-neutral-400 hover:text-neutral-700 dark:hover:text-white transition-colors font-medium"
					>
						<FiShield className="w-4 h-4" />
						<span>Privacy</span>
					</a>
					<span class="text-neutral-400 dark:text-neutral-600">â€¢</span>
					<a
						href="/terms"
						class="flex items-center gap-2 text-neutral-500 dark:text-neutral-400 hover:text-neutral-700 dark:hover:text-white transition-colors font-medium"
					>
						<FiFileText className="w-4 h-4" />
						<span>Terms</span>
					</a>
				</div>
			</div>

			<div class="text-center">
				<div class="text-sm text-neutral-500 dark:text-neutral-400">
					&copy; 2024-{new Date().getFullYear()} All rights reserved.
				</div>
			</div>
		</div>

		<div class="hidden md:flex flex-col gap-4">
			<div class="flex items-start justify-between">
				<div class="flex flex-col gap-3 max-w-lg">
					<div class="flex items-center gap-3">
						<img src={siteConfig.logo} alt="Logo" class="w-8 h-8 rounded-lg shadow-sm" />
						<span class="text-lg font-semibold text-neutral-800 dark:text-white">
							{siteConfig.name}
						</span>
					</div>
					<p class="text-sm text-neutral-600 dark:text-neutral-400 leading-relaxed">
						{siteConfig.shortDescription}
					</p>
				</div>
				<div class="flex items-center">
					<ThemeToggle client:load />
				</div>
			</div>

			<div class="flex items-center justify-between pt-4 border-t border-gray-200/30 dark:border-gray-700/30">
				<div class="flex items-center gap-6">
					<div class="text-sm text-neutral-500 dark:text-neutral-400">
						&copy; {new Date().getFullYear()} All rights reserved.
					</div>
				</div>

			</div>
		</div>
	</div>
</footer>
