---
/** biome-ignore-all lint/correctness/noUnusedImports: React icons are used in JSX */
/** biome-ignore-all lint/correctness/noUnusedVariables: variables used in Astro components */

import { FaArrowRight } from "react-icons/fa";
import type { AppHeroProps } from "@/types/app";

interface Props extends AppHeroProps {}

const { title, description, storeLinks, logo } = Astro.props;
---

<div class="mb-16 flex flex-col items-center md:items-start md:flex-row gap-8">
	<div class="flex-shrink-0 md:self-center">
		<div class="rounded-2xl border border-gray-200/50 dark:border-white/10 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-white/[0.02] dark:to-white/[0.05] p-6 w-[192px] h-[192px] flex items-center justify-center shadow-sm">
			<img src={logo} alt="App Icon" class="h-40 w-40 rounded-2xl object-cover" />
		</div>
	</div>

	<div class="flex flex-1 flex-col justify-between text-center md:text-left">
		<div>
			<h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-3">{title}</h1>
			<p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed mb-6 max-w-2xl mx-auto md:mx-0">{description}</p>
		</div>

		<div class="flex gap-3 justify-center md:justify-start">
			<a
				href={storeLinks.apple}
				target="_blank"
				rel="noopener noreferrer"
				class="group flex items-center justify-center md:justify-start gap-3 rounded-xl border border-[#4c74d4] dark:border-[#5a86f0] bg-[#4c74d4] dark:bg-[#5a86f0] px-5 py-3.5 hover:bg-[#4163b4] dark:hover:bg-[#6a94ff] shadow-md shadow-[#4c74d4]/25 dark:shadow-[#5a86f0]/25 flex-1 min-w-0 md:flex-initial"
			>
				<div class="flex items-center justify-center w-7 h-7 flex-shrink-0">
					<FaArrowRight className="text-white group-hover:translate-x-0.5 w-5 h-5" />
				</div>
				<span class="text-center md:text-left min-w-0">
					<div class="text-base font-normal tracking-wide text-white">Начать отслеживать</div>
				</span>
			</a>
		</div>
		<p class="mt-3 text-xs text-gray-500 dark:text-gray-400 text-center md:text-left">
			*После перехода добавьте приложение на главный экран телефона.
		</p>
	</div>
</div>
